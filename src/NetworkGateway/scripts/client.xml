<?xml version="1.0" encoding="utf-8"?>
<NetworkGateway>
  <!-- IP address of the master node -->
  <MasterIP>127.0.0.1</MasterIP>

  <!-- Standard services ports -->
  <HttpPort>80</HttpPort>
  <HttpsPort>443</HttpsPort>
  <WebSocketsPort>80</WebSocketsPort>
  <GenSocketsPort>123</GenSocketsPort>
  <AggregationPort>1235</AggregationPort>
  
  <!-- Number of worker threads -->
  <WorkersNumber>1</WorkersNumber>
  
  <!-- Maximum number of connections -->
  <MaxConnections>1000</MaxConnections>
  
  <!-- Local interfaces to bind -->
  <LocalIP>10.0.0.1</LocalIP>
  <LocalIP>10.0.0.2</LocalIP>
  <LocalIP>10.0.0.3</LocalIP>
  <LocalIP>10.0.0.4</LocalIP>
  <LocalIP>10.0.0.5</LocalIP>
</NetworkGateway>
