<?xml version="1.0" encoding="utf-8"?>
<NetworkGateway>
  <!-- IP address of the master node -->
  <MasterIP></MasterIP>

  <!-- Standard services ports -->
  <HttpPort>0</HttpPort>
  <HttpsPort>0</HttpsPort>
  <WebSocketsPort>0</WebSocketsPort>
  <GenSocketsPort>0</GenSocketsPort>
  <AggregationPort>0</AggregationPort>
  
  <!-- Number of worker threads -->
  <WorkersNumber>1</WorkersNumber>
  
  <!-- Maximum number of connections -->
  <MaxConnections>100000</MaxConnections>

  <!-- Inactive session life time in seconds -->
  <InactiveSessionTimeout>1200</InactiveSessionTimeout>

  <!-- Information on reverse proxies if any. -->
  <ReverseProxies>
      
    <ReverseProxy>
      <ServerIP>69.16.244.74</ServerIP>
      <ServerPort>80</ServerPort>
      <URI>/forum</URI>
    </ReverseProxy>

    <ReverseProxy>
      <ServerIP>69.16.244.74</ServerIP>
      <ServerPort>80</ServerPort>
      <URI>/wiki</URI>
    </ReverseProxy>
    
    <ReverseProxy>
      <ServerIP>69.16.244.74</ServerIP>
      <ServerPort>80</ServerPort>
      <URI>/queue-signup.php</URI>
    </ReverseProxy>
      
  </ReverseProxies>    
  
  <!-- Local interfaces to bind -->
  <LocalIP>127.0.0.1</LocalIP>
  <!-- <LocalIP>192.168.8.113</LocalIP>
  <LocalIP>10.0.0.2</LocalIP>
  <LocalIP>10.0.0.3</LocalIP>
  <LocalIP>10.0.0.4</LocalIP>
  <LocalIP>10.0.0.5</LocalIP>
  -->
  
  <TestingMode>3</TestingMode>
  <!--
  MODE_GATEWAY_PING = 1,
  MODE_APPS_PING = 2,
  MODE_GATEWAY_HTTP = 3,
  MODE_APPS_HTTP = 4
  -->
  
  <!-- Number of connections to make to master node from this client -->
  <NumConnectionsToMaster>1</NumConnectionsToMaster>

  <!-- Number of tracked echoes to master node from this client -->
  <NumEchoesToMaster>1</NumEchoesToMaster>

</NetworkGateway>
