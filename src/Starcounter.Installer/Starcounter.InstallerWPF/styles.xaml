        <Setter Property="Background" Value="{DynamicResource ThemeColor}"/>
        <Setter Property="BorderBrush" Value="#40000000"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">

                    <Grid  Background="Transparent" VerticalAlignment="{TemplateBinding VerticalAlignment}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Box" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Content"/>
                        </Grid.ColumnDefinitions>

                        <Border  Margin="0,0,12.5,0" Padding="3"  CornerRadius="5">
                            <Border.Background>

                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#30000000" Offset="0"/>
                                    <GradientStop Color="#20000000" Offset="0.3"/>
                                    <GradientStop Color="#05ffffff" Offset="1"/>
                                </LinearGradientBrush>

                            </Border.Background>


                            <Grid  >

                                <Border x:Name="main" Background="#d0303030" Opacity="1"  CornerRadius="5"/>

                                <Grid x:Name="cp"  Margin="{TemplateBinding Padding}" Width="20" Height="20">
                                    <Border BorderBrush="#00000000" Background="#00000000" BorderThickness="0,0,1,1"  Margin="0"  CornerRadius="2">

                                        <Border BorderBrush="#00000000" BorderThickness="1,1,0,0"  Margin="0"  CornerRadius="0">
                                            <Rectangle Margin="0,0,0,0" x:Name="CheckMark" Width="8" Height="8" Stroke="#00000000" StrokeThickness="1" Fill="{TemplateBinding Background}" RadiusX="1" RadiusY="1" />
                                        </Border>
                                    </Border>

                                    <Border Background="{TemplateBinding Background}" Visibility="{Binding ElementName=CheckMark, Path=Visibility}" Opacity="1" Width="12" Height="12">
                                        <Border.Effect>
                                            <BlurEffect Radius="16"   />
                                        </Border.Effect>
                                    </Border>
                                </Grid>

                                <Border x:Name="downOverlay" Background="Transparent" Opacity="1" BorderThickness="1" CornerRadius="5"/>

                                <!-- Outerborder -->
                                <Border x:Name="outerBorderOverlay" Background="{DynamicResource ButtonOuterBackground}" BorderBrush="#40000000" BorderThickness="1" CornerRadius="5">
                                    <Grid>
                                        <Border x:Name="highlight" BorderBrush="#20ffffff" BorderThickness="0,1,0,0"  CornerRadius="4,4,0,0" Padding="0" Background="Transparent" Height="6" VerticalAlignment="Top" />
                                        <Border x:Name="shadow" BorderBrush="#40000000" BorderThickness="0,0,0,1"  CornerRadius="0,0,4,4" Padding="0" Background="Transparent" Height="6" VerticalAlignment="Bottom"/>
                                    </Grid>
                                </Border>


                                <Border x:Name="disabledOverlay" Background="#40000000" Opacity="1" BorderThickness="0" CornerRadius="5" Visibility="Collapsed"/>

                            </Grid>



                        </Border>

                        <!-- Content -->
                        <Border Grid.Column="1" Margin="0,3,0,0" >
                            <ContentPresenter Margin="0" RecognizesAccessKey="True" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>




                    </Grid>

                    <ControlTemplate.Triggers>


                        <Trigger Property="ButtonBase.IsPressed" Value="True">

                            <Setter Property="Background" Value="#40000000" TargetName="downOverlay"   />
                            <Setter Property="Margin" Value="0,1,0,0" TargetName="CheckMark"   />

                            <Setter Property="BorderBrush" Value="#40000000" TargetName="highlight"   />
                            <Setter Property="BorderBrush" Value="#20ffffff" TargetName="shadow"   />


                        </Trigger>


                        <Trigger Property="IsEnabled" Value="False">

                            <Setter Property="Visibility" Value="Collapsed" TargetName="main"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="outerBorderOverlay"/>
                            <Setter Property="Visibility" Value="Collapsed" TargetName="downOverlay"/>
                            <Setter Property="Visibility" Value="Visible" TargetName="disabledOverlay"/>

                            <Setter Property="Opacity" Value="0.6" TargetName="cp"/>

                            <Setter Property="Margin" Value="0,1,0,0" TargetName="CheckMark"   />

                            <!--<Setter Property="Foreground" Value="#30ffffff"   />-->


                        </Trigger>

                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" TargetName="CheckMark"/>

                        </Trigger>

                    </ControlTemplate.Triggers>



                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

