<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <CoreCompileDependsOn>$(CoreCompileDependsOn);GeneratePuppetCode;GenerateMessageCode</CoreCompileDependsOn>
  </PropertyGroup>
  <ItemGroup>
    <AvailableItemName Include="Puppet"/>
    <AvailableItemName Include="Message"/>
  </ItemGroup>
     
  <!-- TODO: Temporary path. Use installation directory for starcounter later when Apps is integrated into main Starcounter -->
 <UsingTask TaskName="Starcounter.Internal.MsBuild.JsonToPuppetCsMsBuildTaskNoLocking" AssemblyFile="..\..\bin\$(Configuration)\Starcounter.MsBuild.dll" />


  <Target Name="GeneratePuppetCode" Inputs="@(Puppet)" Outputs="@(Puppet->'$(IntermediateOutputPath)%(FileName)%(Extension).g.cs')">
    <JsonToPuppetCsMsBuildTaskNoLocking
       InputFiles="@(Puppet)"
       OutputFiles="@(Puppet->'$(IntermediateOutputPath)%(FileName)%(Extension).g.cs')">
       <Output TaskParameter="OutputFiles" ItemName="gFiles" /> 
    </JsonToPuppetCsMsBuildTaskNoLocking>
	<ItemGroup>
      <Compile Include="@(gFiles)" />
    </ItemGroup>
  </Target>

 <UsingTask TaskName="Starcounter.Internal.MsBuild.JsonToMessageCsMsBuildTaskNoLocking" AssemblyFile="$(StarcounterBin)\Starcounter.MsBuild.dll" />

  <Target Name="GenerateMessageCode" Inputs="@(Message)" Outputs="@(Message->'$(IntermediateOutputPath)%(FileName)%(Extension).g.cs')">
    <JsonToMessageCsMsBuildTaskNoLocking
       InputFiles="@(Message)"
       OutputFiles="@(Message->'$(IntermediateOutputPath)%(FileName)%(Extension).g.cs')">
       <Output TaskParameter="OutputFiles" ItemName="gFiles" /> 
    </JsonToMessageCsMsBuildTaskNoLocking>
	<ItemGroup>
      <Compile Include="@(gFiles)" />
    </ItemGroup>
  </Target>

  <Target Name="AfterBuild">
    <Exec Command="&quot;..\..\bin\$(Configuration)\scweaver.exe&quot; Weave --outdir=&quot;$(TargetPath)\..\weaved&quot; --cachedir=&quot;$(TargetPath)\..\cache&quot; &quot;$(TargetPath)&quot;"/>
    <ItemGroup>
      <AdminWeavedFiles Include="$(TargetPath)\..\weaved\$(AssemblyName).*" />
    </ItemGroup>
    <Copy SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" SourceFiles="@(AdminWeavedFiles)" DestinationFolder="$(TargetPath)\.." />
  </Target>
</Project>


