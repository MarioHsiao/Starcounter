<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <CoreCompileDependsOn>$(CoreCompileDependsOn);GenerateAppCode</CoreCompileDependsOn>
  </PropertyGroup>
  <ItemGroup>
    <AvailableItemName Include="App"/>
  </ItemGroup>
     
  <!-- TODO: Temporary path. Use installation directory for starcounter later when Apps is integrated into main Starcounter -->
 <UsingTask TaskName="Starcounter.Internal.MsBuild.JsonToCsMsBuildTask" AssemblyFile="..\..\bin\$(Configuration)\Starcounter.MsBuild.dll" />

  <Target Name="GenerateAppCode" Inputs="@(App)" Outputs="@(App->'$(IntermediateOutputPath)%(FileName)%(Extension).g.cs')">
    <JsonToCsMsBuildTask
       InputFiles="@(App)"
       OutputFiles="@(App->'$(IntermediateOutputPath)%(FileName)%(Extension).g.cs')">
       <Output TaskParameter="OutputFiles" ItemName="gFiles" /> 
    </JsonToCsMsBuildTask>
	<ItemGroup>
      <Compile Include="@(gFiles)" />
    </ItemGroup>
  </Target>

  <Target Name="AfterBuild">
    <Exec Command="&quot;..\..\bin\$(Configuration)\scweaver.exe&quot; Weave --outdir=&quot;$(TargetPath)\..\weaved&quot; --cachedir=&quot;$(TargetPath)\..\cache&quot; &quot;$(TargetPath)&quot;"/>
    <ItemGroup>
      <AdminWeavedFiles Include="$(TargetPath)\..\weaved\$(AssemblyName).*" />
    </ItemGroup>
    <Copy SkipUnchangedFiles="true" OverwriteReadOnlyFiles="true" SourceFiles="@(AdminWeavedFiles)" DestinationFolder="$(TargetPath)\.." />
  </Target>
</Project>


