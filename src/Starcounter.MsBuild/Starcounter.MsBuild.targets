<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <CoreCompileDependsOn>$(CoreCompileDependsOn);GeneratePuppetCode</CoreCompileDependsOn>
  </PropertyGroup>
  <ItemGroup>
    <AvailableItemName Include="Puppet"/>
  </ItemGroup>
     
  <!-- TODO: Temporary path. Use installation directory for starcounter later when Apps is integrated into main Starcounter -->
 <UsingTask TaskName="Starcounter.Internal.MsBuild.JsonToPuppetCsMsBuildTask" AssemblyFile="$(StarcounterBin)\Starcounter.MsBuild.dll" />

  <Target Name="GeneratePuppetCode" Inputs="@(Puppet)" Outputs="@(Puppet->'$(IntermediateOutputPath)%(FileName)%(Extension).g.cs')">
    <JsonToCsMsBuildTask
       InputFiles="@(Puppet)"
       OutputFiles="@(Puppet->'$(IntermediateOutputPath)%(FileName)%(Extension).g.cs')">
       <Output TaskParameter="OutputFiles" ItemName="gFiles" /> 
    </JsonToCsMsBuildTask>
	<ItemGroup>
      <Compile Include="@(gFiles)" />
    </ItemGroup>
  </Target>

  <Target Name="AfterBuild">
    <Exec Command="&quot;$(StarcounterBin)\scweaver.exe&quot; WeaveBootstrapper &quot;$(TargetPath)&quot;"/>
  </Target>
</Project>


