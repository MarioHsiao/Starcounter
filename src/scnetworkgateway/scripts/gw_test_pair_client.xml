<?xml version="1.0" encoding="utf-8"?>
<NetworkGateway>
  <!-- IP address of the master node -->
  <MasterIP>127.0.0.1</MasterIP>

  <!-- Standard services ports -->
  <HttpPort>0</HttpPort>
  <HttpsPort>0</HttpsPort>
  <WebSocketsPort>0</WebSocketsPort>
  <GenSocketsPort>0</GenSocketsPort>
  <AggregationPort>0</AggregationPort>
  
  <!-- Number of worker threads -->
  <WorkersNumber>2</WorkersNumber>
  
  <!-- Maximum number of connections -->
  <MaxConnections>1000000</MaxConnections>

  <!-- Inactive session life time in seconds -->
  <InactiveSessionTimeout>1200</InactiveSessionTimeout>

  <!-- Gateway global statistics port -->
  <GatewayStatisticsPort>12345</GatewayStatisticsPort>
  
