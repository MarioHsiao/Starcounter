  <LocalIP>10.0.0.5</LocalIP>
  -->

  <!-- In which test mode Gateway operates. -->
  <TestingMode>MODE_GATEWAY_HTTP</TestingMode>

  <!-- Number of connections to make to master node from this client -->
  <NumConnectionsToMaster>10</NumConnectionsToMaster>

  <!-- Number of tracked echoes to master node from this client -->
  <NumEchoesToMaster>5000000</NumEchoesToMaster>

  <!-- Maximum test time in seconds. -->
  <MaxTestTimeSeconds>1000</MaxTestTimeSeconds>

  <!-- Gateway-only HTTP requests per second. -->
  <ReportStatisticsName>Workers4Conns1000GwHttpRequestsPerSec</ReportStatisticsName>

</NetworkGateway>
