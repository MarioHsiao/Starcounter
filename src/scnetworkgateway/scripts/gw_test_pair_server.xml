  <BindingIP>10.0.0.4</BindingIP>
  <BindingIP>10.0.0.5</BindingIP>
  -->

  <!-- Number of worker threads -->
  <WorkersNumber>1</WorkersNumber>
  
  <!-- Maximum number of connections -->
  <MaxConnections>1000000</MaxConnections>

  <!-- Inactive connection life time in seconds -->
  <InactiveConnectionTimeout>1200</InactiveConnectionTimeout>

  <!-- Gateway global statistics port -->
  <GatewayStatisticsPort>12345</GatewayStatisticsPort>

  <!-- Gateway traffic aggregation port -->
  <AggregationPort>23456</AggregationPort>
  
