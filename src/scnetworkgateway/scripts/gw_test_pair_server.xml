  <TestingMode>2</TestingMode>
  <!--
    MODE_GATEWAY_PING = 1,
    MODE_GATEWAY_HTTP = 2,
    MODE_APPS_PING = 3,
    MODE_APPS_HTTP = 4
  -->
  
  <!-- Number of connections to make to master node from this client -->
  <NumConnectionsToMaster>250000</NumConnectionsToMaster>

  <!-- Number of tracked echoes to master node from this client -->
  <NumEchoesToMaster>1000000</NumEchoesToMaster>

</NetworkGateway>
