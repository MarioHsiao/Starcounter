<NetworkGateway>
  <!-- IP address of the master node -->
  <MasterIP></MasterIP>

  <!--
  List of local interfaces to bind to.
  Declare them when you expect the number of outgoing
  connections(e.g. due to proxying) to be more than 64K.
  -->
