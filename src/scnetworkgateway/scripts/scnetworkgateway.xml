  <!-- In which test mode Gateway operates. -->
  <TestingMode>MODE_GATEWAY_SMC_HTTP</TestingMode>

  <!-- Server test port. -->
  <ServerTestPort>123</ServerTestPort>
  
  <!-- Number of connections to make to master node from this client -->
  <NumConnectionsToMaster>1000</NumConnectionsToMaster>

  <!-- Number of tracked echoes to master node from this client -->
  <NumEchoesToMaster>10000000</NumEchoesToMaster>

  <!-- Maximum test time in seconds. -->
  <MaxTestTimeSeconds>100</MaxTestTimeSeconds>

